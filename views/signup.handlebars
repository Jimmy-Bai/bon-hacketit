<div class="container d-flex justify-content-center align-items-center force-center">
    <div class="modal-dialog">
        <div class="modal-content">
            {{!-- Modal Header --}}
            <div class="modal-header mb-0">
                <h5 class="modal-title">Sign Up</h5>
            </div>
            {{!-- Modal Body --}}
            <div class="modal-body py-0">
                <form action="/users/signup" method="POST" name="signup" enctype="multipart/form-data">
                    {{>alerts}}
                    <div class="form-group md-form">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" name="username" id="username"
                            required>
                    </div>
                    <div class="form-group md-form">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password"
                            required>
                    </div>
                    <div class="form-group md-form">
                        <label for="password2">Confirm your password</label>
                        <input type="password" class="form-control" name="password2" id="password2"
                            required>
                    </div>
                    <div class="form-group md-form">
                        <div class="custom-file">
                            <label class="custom-file-label" for="image">Choose a profile picture (Optional)</label>
                            <input type="file" class="custom-file-input" name="image" id="image">
                        </div>
                    </div>
                    <div class="form-group md-form">
                        <button type="submit" class="btn btn-primary w-100 m-0 teal darken-3">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    // Allow file names to be shown after selecting
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
