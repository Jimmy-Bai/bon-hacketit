<div class='container'>
    <div class="modal-content">
        <div class="modal-header mb-0">
            <h5 class="modal-title">Post Restaurant</h5>
        </div>

        <div class="modal-body py-0">
            {{>alerts}}
            <form method="POST" action="/users/signup" name="postrestaraunt">
                <p><label for="file" style="cursor: pointer;">Upload Image</label></p>
                <input type="file" accept="image/*" name=image" id=file" style="display: none;">

                <p><label>Dish Name</label></p>
                <input type="text" name="dish">

                <p><label>Restaurant</label></p>
                <input type="text" name="restaurant">

                <p><label>Description</label></p>
                <input type="text" name="description">

                <p><label>Cost</label></p>
                <input type="text" name="cost">

                <input type="submit" value="Submit">
            </form>
        </div>
    </div>
</div>